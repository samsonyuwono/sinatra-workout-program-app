<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<!-- show all exercises -->
<h1>Welcome, <%= current_user.username %></h1>
<br>
<h3>Below are your exercises for today's workout</h3>
<% @exercises.each do |exercise| %>

<h4></a>Exercise Name: <%= exercise.name %> </h4>
<p>Repetitions= <%= exercise.repetition %></p>
<p>Sets= <%= exercise.sets %></p>

 <a href="/exercises/<%=exercise.id%>/edit">Edit</a>
 <a href="/exercises/<%=exercise.id%>">View Exercise</a>
<% end %>
