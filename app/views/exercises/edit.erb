<h1>Edit Exercise</h1>
<form action="/exercises/<%=@exercise.id%>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name" value="<%=@exercise.name%>">
  <input type="number" name="repetition" value="<%@exercise.repetition%>">
  <input id="sets" type="number" name="sets" value="<%=@exercise.sets%">
  <input type="submit" name="submit" value="Edit Exercise">
</form>
